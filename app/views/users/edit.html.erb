
<main>
    <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this obj from being saved:
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
    <% end %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_for(@user) do |f| %>
        <div class="form-group">
          <tr>
            <th><%= f.label :name %></th>
            <th><%= f.text_field :name,class: "form-control name" %></th>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <th><%= f.label :image %></th>
            <th><%= f.attachment_field :profile_image, class: "form-control-file user_image" %></th>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <th><%= f.label :introduction %></th>
            <th><%= f.text_area :introduction, class: "form-control introduction" %></th>
          </tr>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User',class: "btn btn-secondary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>